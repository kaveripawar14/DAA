#include <stdio.h>
#include <stdlib.h>
#include <time.h>
typedef struct {
char order_id[20];
time_t timestamp;
} Order;
void generate_orders(Order *orders, int n) {
for (int i = 0; i < n; i++) {
orders[i].timestamp = time(NULL) + rand() % 10000;
sprintf(orders[i].order_id, "ORD%d", i + 1);
}
}
void print_orders(Order *orders, int n) {
for (int i = 0; i < n; i++) {
printf("%s Time: %ld\n", orders[i].order_id, orders[i].timestamp);
}
}
void merge(Order *arr, int l, int m, int r) {

int n1 = m - l + 1, n2 = r - m;
Order L[n1], R[n2];
for (int i = 0; i < n1; i++) L[i] = arr[l + i];
for (int j = 0; j < n2; j++) R[j] = arr[m + 1 + j];
int i = 0, j = 0, k = l;
while (i < n1 && j < n2) {
if (L[i].timestamp <= R[j].timestamp) arr[k++] = L[i++];
else arr[k++] = R[j++];
}
while (i < n1) arr[k++] = L[i++];
while (j < n2) arr[k++] = R[j++];
}
void merge_sort(Order *arr, int l, int r) {
if (l < r) {
int m = (l + r) / 2;
merge_sort(arr, l, m);
merge_sort(arr, m + 1, r);
merge(arr, l, m, r);
}
}
int main() {
int n = 10;
Order orders[n];
srand(time(NULL));
generate_orders(orders, n);
printf("Before Sorting:\n");
print_orders(orders, n);
merge_sort(orders, 0, n - 1);
printf("\nAfter Sorting:\n");
print_orders(orders, n);
return 0;
}
